# Snipe-IT service
SNIPEIT_PORT=5011
SNIPEIT_TZ=Europe/Paris
SNIPEIT_APP_URL=http://snipeit.example.com
SNIPEIT_VERSION=latest # Pin to a specific version (recommended), e.g. v6.3.4

# Laravel app settings (REQUIRED)
SNIPEIT_APP_ENV=production
SNIPEIT_APP_DEBUG=false
SNIPEIT_APP_KEY="base64:DNzUGUpd+5MUmOoLDROfq+ZwBtN1fXq7bVDLm5JhKF0=" # Set to a base64 key (see instructions below)

# Storage paths on host (common base)
SNIPEIT_BASE_PATH=/home/snipeit
# Files will be stored under: /home/snipeit/files
# Database will be stored under: /home/snipeit/db

# Database connection (internal only)
SNIPEIT_DB_CONNECTION=mysql
SNIPEIT_DB_HOST=snipeit_db
SNIPEIT_DB_NAME=snipeit
SNIPEIT_DB_USER=snipeit
SNIPEIT_DB_PASSWORD=change-me
SNIPEIT_DB_ROOT_PASSWORD=change-me-root
SNIPEIT_DB_TZ=Europe/Paris

# Watchtower
SNIPEIT_WATCHTOWER_LABEL_ENABLE=true

# Optional mail settings (uncomment/configure if needed)
# SNIPEIT_MAIL_HOST=smtp.example.com
# SNIPEIT_MAIL_PORT=587
# SNIPEIT_MAIL_USERNAME=smtp-user
# SNIPEIT_MAIL_PASSWORD=smtp-password
# SNIPEIT_MAIL_ENCRYPTION=tls

# How to generate APP_KEY
# Run: docker compose run --rm snipeit php artisan key:generate --show
# Copy the output (includes "base64:") into SNIPEIT_APP_KEY above, then:
# docker compose down && docker compose up -d
